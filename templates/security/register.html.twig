{% extends "_template.html.twig" %}

{% block title %}
    Inscription
{% endblock %}

{% block content %}
    <div class="section">
        <h1 class="title">Inscription</h1>

        {{ form_start(inscriptionForm) }}
             
         {{ form_row(inscriptionForm.name, {
            label: 'Votre Nom:'
        }) }}

         {{ form_row(inscriptionForm.pseudo, {
            label: 'Votre Pseudo:'
        }) }}
         {{ form_row(inscriptionForm.telephone, {
            label: 'Telephone:'
        }) }}

        {{ form_row(inscriptionForm.email, {
            label: 'Adresse email:'
        }) }}

        {{ form_row(inscriptionForm.plainPassword.first, {
                label: 'Mot de passe:'
        }) }}

        {{ form_row(inscriptionForm.plainPassword.second, {
                label: 'Confirmer le mot de passe:'
        }) }}

         



        <button type="submit" class="button is-primary is-fullwidth">
            Inscription
        </button>
    


        {{ form_end(inscriptionForm) }}

    </div>
{% endblock %}

